package Roles;

public class monster extends roles{
	public monster(int attack, int stamina){
		super(attack, stamina);
	}
	public boolean ispoisoned(){
		//Normally a monster has no poison
		return false;
	}

}

/*
 * There are three special types of monsters:
 * 1: dog: normal ones
 * 2: worm: do damage to the weapon
 * 3. spider: poisoning
 * 4. bomb: explosion on death
 */

//Special monster to damage weapon
class worm extends roles{
	private int wpn_dmg;
	
	public worm(int attack, int stamina, int wpn_dmg){
		super(attack, stamina);
		this.wpn_dmg = wpn_dmg;
	}
	
	public int damage_weapon(){
		return wpn_dmg;
	}
}

//Special monster to cause poison
class spider extends roles{
	public spider(int attack, int stamina){
		super(attack, stamina);
	}
	public boolean ispoisoned(){
		//Normally a monster has no poison
		return true;
	}
}

//Special monster to explode when killed
class bomb extends roles{
	private int hurt;
	public bomb(int attack, int stamina, int hurt){
		super(attack, stamina);
		this.hurt = hurt;
	}
	public int explode(){
		if(isdead()){
			return hurt;
		}
		else
			return 0;
	}
}
